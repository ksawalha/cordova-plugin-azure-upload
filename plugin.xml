<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-azure-upload" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Azure Upload Plugin</name>
    <description>Cordova Plugin to handle chunked file uploads to Azure Blob Storage for com.karamsawalha.arabicschool</description>
    <license>MIT</license>
    <keywords>azure, upload, cordova, chunked</keywords>
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="AzureUpload">
                <param name="android-package" value="com.karamsawalha.azureupload.AzureUpload"/>
            </feature>
        </config-file>
        <source-file src="src/android/AzureUpload.java" target-dir="src/com/karamsawalha/azureupload"/>
    </platform>

    <platform name="ios">
        <source-file src="src/ios/AzureUpload.swift" framework="true"/>
    </platform>

    <js-module src="www/azureUpload.js" name="AzureUpload">
        <clobbers target="azureUpload"/>
    </js-module>
</plugin>
